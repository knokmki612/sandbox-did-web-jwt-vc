  "author": "Kimiaki Kuno <knomki612@gmail.com>",
  "bugs": {
    "url": "https://github.com/knokmki612/sandbox-did-web-jwt-vc/issues"
  },
  "devDependencies": {
    "@noble/ed25519": "^1.3.0",
    "@types/jest": "27.0.3",
    "@types/node": "^17.0.1",
    "did-jwt": "^5.12.1",
    "did-jwt-vc": "^2.1.8",
    "dotenv": "^10.0.0",
    "fastify": "^3.25.0",
    "fastify-autoload": "^3.9.0",
    "fastify-cli": "^2.14.0",
    "fastify-cors": "^6.0.2",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.2",
    "fastify-tsconfig": "^1.0.1",
    "npm-run-all": "4.1.5",
    "ts-jest": "27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "uint8arrays": "^3.0.0"
  },
  "directories": {
    "test": "test"
  },
  "homepage": "https://github.com/knokmki612/sandbox-did-web-jwt-vc#readme",
  "keywords": [
    "did",
    "fastify",
    "jwt"
  ],
  "license": "MIT",
  "main": "app.ts",
  "repository": "git@github.com:knokmki612/sandbox-did-web-jwt-vc.git",
  "scripts": {
    "build": "tsc",
    "dev": "npm-run-all build -p dev:*",
    "dev:fastify": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "dev:ts": "tsc -w",
    "start": "run-s build && fastify start -l info dist/app.js",
